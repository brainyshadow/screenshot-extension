{
  "name": "Screenshot-Extension",
  "version": "1.0",
  "description": "An extension that will take a screenshot of the current tab with the click of a button.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "desktopCapture",
    "downloads",
    "tabs",
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_title": "Take a Screenshot"
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
